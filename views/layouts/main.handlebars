<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css"
    />
    <link
      rel="icon"
      type="image/x-icon"
      href="https://img.icons8.com/external-flaticons-flat-flat-icons/64/000000/external-blog-new-media-flaticons-flat-flat-icons.png"
    />
    <title>Tech Blob</title>

    <style>
      .hidden: {display: none}, .visible: {display: block}
    </style>
  </head>
  <body style="position:relative" style="min-height:100%">

    <header>
      <nav class="panel">
        <p class="panel-heading has-text-centered is-size-3">
          Tech Blob
        </p>
      </nav>
    </header>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a class="navbar-item" href="/">
          <img
            src="https://img.icons8.com/external-flaticons-flat-flat-icons/64/000000/external-blog-new-media-flaticons-flat-flat-icons.png"
          />
        </a>

        <div class="navbar-end">
          <div class="navbar-item">
            <div class="buttons">
              <a class="button is-primary" href="/signup">
                <strong>Sign up</strong>
              </a>
              {{#if loggedIn}}
                <a id="logout" class="button is-light" href="/login">
                  <strong>Log out</strong>
                </a>
                <a id="dashboard" class="button is-light" href="/dashboard">
                  <strong>Dashboard</strong>
                </a>
              {{else}}
                <a class="button is-light" href="/login">
                  <strong>Log in</strong>
                </a>

              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </nav>

    <section class="section">
      {{{body}}}
    </section>

    <footer
      class="footer"
      style=" left:0; bottom:0; width: 100%; height:100px; width:100%; overflow:hidden; padding-top:40px; padding-bottom:30px"
    >
      <div class="content has-text-centered">
        <p>
          <strong>&copy; Tech Blob</strong>
          by
          <a href="www.github.com/hadasss">Hadasss</a>.
        </p>
      </div>
    </footer>

    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{/if}}
  </body>
</html>